<?xml version="1.0" encoding="utf-8"?><!--  Single List Item Design -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLight"
    android:padding="10dp">

    <TextView
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_maker"
        android:text="I shall say waht i have to say you can say what you have to say at the end it is Penguin who decides what needs to happen"
        android:textColor="@color/colorDarkBg"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="27 July 2017 10 pm"
        android:textColor="@color/colorDarkBg"
        android:textSize="13dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/post_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/post"
        android:layout_toLeftOf="@id/post_time"
        android:text="Rishabh Shah"
        android:textColor="@color/colorDarkBg"
        android:textSize="17dp"
        android:textStyle="italic|bold" />

    <TableLayout
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:id="@+id/table_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:background="#ffb000"
        android:textSize="12dp">

    </TableLayout>


    <Button
        android:id="@+id/more_comment_button"

        android:layout_alignParentEnd="true"
        android:layout_below="@id/table_show"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_more_comments" />

    <Button
        android:id="@+id/add_comment_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/more_comment_button"
        android:background="@drawable/ic_send" />

    <EditText
        android:id="@+id/new_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_comment_button"
        android:layout_toLeftOf="@id/add_comment_button"
        android:hint="Write a Comment..."

        android:inputType="textMultiLine"
        android:textSize="13dp"
        android:textColor="@color/colorDarkBg" />



</RelativeLayout>

