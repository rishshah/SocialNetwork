<?xml version="1.0" encoding="utf-8"?><!--  Single List Item Design -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0000ab"
    android:padding="10dp"
    android:layout_margin="5dp"
    >
    <TextView
        android:id="@+id/post_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/post_time"
        android:layout_alignLeft="@id/post"
        android:text="Rishabh Shah"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_maker"
        android:text="I shall say waht i have to say you can say what you have to say at the end it is Penguin who decides what needs to happen"
        android:textColor="#ffffff"
        android:textSize="15dp"
         />


    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="27 July 2017 10 pm"
        android:textStyle="italic"
        android:textSize="12dp"
        android:textColor="@color/colorLight" />

    <TableLayout
        android:id="@+id/table_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post"
        android:layout_marginStart="50dp"
        android:background="@color/colorLight"
        android:textSize="12dp">

    </TableLayout>

    <Button
        android:id="@+id/add_comment_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/table_show"
        android:background="@drawable/ic_send"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:id="@+id/new_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a Comment !"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@id/table_show"
        android:layout_toLeftOf="@id/add_comment_button"
        />



</RelativeLayout>

