<?xml version="1.0" encoding="utf-8"?><!--  Single List Item Design -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/post"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"

        android:padding="10dp"
        android:paddingRight="0dp"
        android:text="I shall say waht i have to say you can say what you have to say at the end it is Penguin who decides what needs to happen"
        android:textSize="16dp"
        android:textStyle="bold"></TextView>
    <!--android:layout_width="match_parent"-->


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text="27 July 2017 10 pm"
        android:textColor="@android:color/black" />


    <TableLayout
        android:id="@+id/table_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post"
        android:background="@color/colorLight"
        android:textSize="12dp">

    </TableLayout>

    <Button
        android:id="@+id/add_comment_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/table_show"
        android:background="@drawable/ic_send"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:id="@+id/new_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a Comment !"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@id/table_show"
        android:layout_toLeftOf="@id/add_comment_button"
        />



</RelativeLayout>

