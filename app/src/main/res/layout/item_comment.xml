<!--&lt;!&ndash;  Single List Item Design &ndash;&gt;<?xml version="1.0" encoding="utf-8"?>-->
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:layout_marginTop="3dp">

    <RelativeLayout
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/comment"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:text="I shall say waht i nd it is Penguin who decides what needs to happen"
            android:textSize="14dp"></TextView>


        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="27 July 2017 10 pm"
            android:layout_gravity="right"
            android:textSize="14dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/comment_writer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/comment"
            android:layout_marginTop="5dp"
            android:text="BharatK"
            android:layout_gravity="right"
            android:textSize="14dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</TableRow>

