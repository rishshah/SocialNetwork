<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:duplicateParentState="true">

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/comment_writer"
            android:textColor="@color/colorDarkBg"
            android:width="0dip"
            android:gravity="left"
            android:text="I shall say waht i nd it is Penguin who decides what needs to happen"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="27 July 2017 10 pm"
            android:textColor="@color/colorDarkBg"
            android:textSize="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/comment_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/comment"
            android:layout_toLeftOf="@id/comment_time"
            android:text="Bharat"
            android:textColor="@color/colorDarkBg"
            android:textSize="13dp"
            android:textStyle="italic|bold" />



    </RelativeLayout>
</TableRow>

